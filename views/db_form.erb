	// 		// $('#_method').val('delete');

	// 		var url = '/guide/entry/' + $('#entry').val();

	// 		console.log(url);

	// 		$.ajax({
	// 			type: 'DELETE',
	// 			url: url,
	// 			success: function(result) {
	// 				debugger;
	// 			},
	// 			failure: function(result) {
	// 				debugger;
	// 			}
	// 		});
	// 	} else {
	// 		$('#msgline').html('Delete canceled.');
	// 	}
	// });

});

</script>

<style>
html,body {
	font-family: Helvetica,Arial,sans-serif;
	font-size: .9em;
}
form {
	width: 400px;
}
label {
	display: inline-block;
	width: 100px;
	text-align: right;
}
input[type="submit"],input[type="reset"] {
	float: right;
}
textarea[disabled] {
	background-color: #ccc;
}

#msgline {
	position: absolute;
	min-width: 200px;
	border-radius: 20px;
	color: white;
	background-color: #323232;
	padding: 10px 20px;
